<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_members_bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/add_members_bottom_sheet_layout_v_top_pin"
        android:layout_width="@dimen/_128dp"
        android:layout_height="@dimen/_5dp"
        android:layout_marginVertical="@dimen/_16dp"
        android:background="@drawable/bottom_sheet_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_members_bottom_sheet_layout_tv_you_can_add_upto_6_members"
        style="@style/textViewWith12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:text="@string/you_can_add_upto_6_members"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_members_bottom_sheet_layout_rv_members"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_members_bottom_sheet_layout_rv_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_members_bottom_sheet_layout_v_top_pin"
        app:spanCount="2"
        tools:listitem="@layout/member_card_item" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_members_bottom_sheet_layout_til_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/add_members_bottom_sheet_layout_fab_add_member"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_16dp"
        app:boxBackgroundMode="outline"
        app:layout_constraintTop_toBottomOf="@id/add_members_bottom_sheet_layout_tv_you_can_add_upto_6_members">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_members_bottom_sheet_layout_teit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_code_to_add_member"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_members_bottom_sheet_layout_fab_add_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="@id/add_members_bottom_sheet_layout_til_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:useCompatPadding="true"
        app:layout_constraintStart_toEndOf="@id/add_members_bottom_sheet_layout_til_code"
        app:layout_constraintTop_toTopOf="@id/add_members_bottom_sheet_layout_til_code"
        android:importantForAccessibility="no"
        android:contentDescription="@string/fab_button_to_add_members" />

</androidx.constraintlayout.widget.ConstraintLayout>