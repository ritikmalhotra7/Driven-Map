<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.drivenmap.feat_map.presentation.fragments.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_addMemberDialogFragment"
            app:destination="@id/addMemberDialogFragment" />
        <action
            android:id="@+id/action_mapFragment_to_addedMemberBottomSheetFragment"
            app:destination="@id/addedMemberBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.drivenmap.feat_login.presentation.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.drivenmap.feat_splash.presentation.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <dialog
        android:id="@+id/addMemberDialogFragment"
        android:name="com.example.drivenmap.feat_map.presentation.fragments.AddMemberDialogFragment"
        android:label="fragment_add_member_dialog"
        tools:layout="@layout/fragment_add_member_dialog" />
    <dialog
        android:id="@+id/addedMemberBottomSheetFragment"
        android:name="com.example.drivenmap.feat_map.presentation.dialogs.AddedMemberBottomSheetFragment"
        android:label="fragment_added_member_bottom_sheet"
        tools:layout="@layout/fragment_added_member_bottom_sheet" />
</navigation>